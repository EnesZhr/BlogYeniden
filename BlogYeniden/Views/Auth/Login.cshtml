@using BlogYeniden.ViewModels.Auth;
@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}
@if (TempData["RegisterSuccess"] != null)
{
    <div class="alert alert-primary" role="alert">
        @TempData["RegisterSuccess"]
    </div>
}
<div asp-validation-summary="ModelOnly" class="form-group text-muted"></div>
<form asp-controller="Auth" asp-action="Login" method="post">
    <div class="form-group">
        <label asp-for="Username"></label>
        <input class="form-control" asp-for="Username" placeholder="Enter email">
        <span asp-validation-for="Username" class="form-text text-muted"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input class="form-control" asp-for="Password" placeholder="Password">
        <span asp-validation-for="Password" class="form-text text-muted"></span>
    </div>
    <button type="submit" class="btn btn-primary">Giris Yap</button>
</form>
