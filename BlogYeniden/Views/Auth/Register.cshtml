@using BlogYeniden.ViewModels.Auth;
@model RegisterViewModel
@{
    ViewData["Title"] = "Register Sayfası";
}

<div asp-validation-summary="ModelOnly" class="form-group text-muted"></div>
<form asp-controller="Auth" asp-action="Register" method="post">
    <div class="form-group">
        <label asp-for="Username"></label>
        <input class="form-control" asp-for="Username" placeholder="Enter email">
        <span asp-validation-for="Username" class="form-text text-muted"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input class="form-control" asp-for="Password" placeholder="Password">
        <span asp-validation-for="Password" class="form-text text-muted"></span>
    </div>
    <button type="submit" class="btn btn-primary">Kayıt Ol</button>
</form>
